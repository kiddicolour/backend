{
  "kind": "collectionType",
  "collectionName": "drawings",
  "info": {
    "name": "Drawing",
    "description": "Core object, containing relations to all other Content Types.  Has universal image and optional imageLocalized for images needing translations, and an optional translatedable thumbnail"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true,
    "populateCreatorFields": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string"
    },
    "slug": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "uid",
      "targetField": "title"
    },
    "description": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext"
    },
    "externalId": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "string"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "imageLocalized": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "ages": {
      "via": "drawings",
      "collection": "age"
    },
    "themes": {
      "via": "drawings",
      "collection": "theme"
    },
    "types": {
      "via": "drawings",
      "collection": "type"
    },
    "tags": {
      "collection": "tag",
      "via": "drawings"
    }
  }
}
